
@using BecketLee.Code
@using BecketLee.Models
@model IEnumerable<BecketLee.ViewModels.EventViewModel>

<div class="panel panel-default">
    <div class="panel-heading panel-head text-center"><h3>Manage Events</h3></div>
    <div class="panel-body">
        <div class="top-buffer"></div>

        <div class="btn-group">
            <a id="createEditUserModal" asp-action="EditEvent" asp-controller="Events" class="btn btn-sm btn-info">
                <i class="fa fa-plus"></i>  Add New Event
            </a>

        </div>
        <div class="btn-group ">
            <a asp-action="Index" asp-controller="Auth" class="btn btn-sm btn-info">
                <i class="fa fa-gavel"></i>  Management
            </a>

        </div>

        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th class="text-center">Event</th>
                    <th class="text-center">Event Type</th>
                    <th class="text-center">Start Date</th>
                    <th class="text-center">End Date</th>
                    <th class="text-center" colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-justify">
                            @item.Title
                        </td>
                        <td>
                            @item.EventType.EventTypeDescription
                        </td>
                        <td>
                            @string.Format( "{0:MM/dd/yyyy}", item.StartDate )
                        </td>
                        <td>
                            @string.Format( "{0:MM/dd/yyyy}", item.EndDate )
                        </td>
                        <td>
                            <a asp-action="EditEvent" asp-controller="Events" asp-route-id="@item.EventId" class="btn btn-sm btn-info">
                                <i class="fa fa-pencil"></i> Edit
                            </a>
                        </td>
                        <td>
                            <a id="deleteEventModal" data-toggle="modal" data-target="#modal-action-event" asp-action="DeleteEvent" asp-controller="Events" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash"> </i> Delete
                            </a>                        
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@Html.Partial( "_Modal", new BootstrapModel { ID = "modal-action-event", AreaLabeledId = "modal-action-event-label", Size = ModalSize.Medium } )
