@model BecketLee.ViewModels.UserViewModel


<form asp-action="AddUserRole">

    <div>
        @foreach (var item in @Model.UserRoles)
        {
            <div>
                item.RoleName <a asp-action="DeleteUserRole" asp-controller="Users" asp-route-id="item.RoleId" class="btn btn-sm btn-danger"><i class="fa fa-xing"> </i>Delete </a>
            </div>
        }
        <div class="form-group">
            <div>
                <select asp-for="UserRoles" asp-items="@Model.ApplicationRoles" class="form-control">
                    <option>Please select</option>
                </select>
                <a asp-action="AddUserRole" asp-controller="Users" asp-route-id="item.RoleId" class="btn btn-sm btn-default"><i class="fa fa-user"> </i> Add Role </a>

            </div>
        </div>
    </div>
</form>
